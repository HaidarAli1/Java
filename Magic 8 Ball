/*Author:Haidar Ali
 *Date:9/10/2018
 *FileName: Magic8BallHaidar.java
 *Description: Creating a magic 8 ball that randomly generates strings of dialog.
 */
import java.io.*;
class Magic8BallHaidar
{
  public static void main(String[] args)throws Exception
  {
    String Reader; 
    int number = (int) (Math.random () * 16) + 1;
    BufferedReader buffer = new BufferedReader(new InputStreamReader(System.in));
    System.out.println("What is the question that you will ask, THE MAGIC 8 BALL?");
    Reader = buffer.readLine();
    if (number == 1)
    {
      System.out.println("Outlook not so good.");
    }else if (number == 2)
    {
      System.out.println("Don't Count on it.");
    }else if (number == 3)
    {
      System.out.println("My Source Says NO!.");
    }else if (number == 4)
    {
      System.out.println("Without a doubt.");
    }else if (number == 5)
    {
      System.out.println("Reply hazy, try again.");
    }else if (number == 6)
    {
      System.out.println("It is CERTAIN.");
    }else if (number == 7)
    {
      System.out.println("My Reply is NO!");
    }else if (number == 8)
    {
      System.out.println("As I see it yes.");
    }else if (number == 9)
    {
      System.out.println("Most Likely.");
    }else if (number == 10)
    {
      System.out.println("You may rely on it.");
    }else if (number == 11)
    {
      System.out.println("Cannot predict now");
    }else if (number == 12)
    {
      System.out.println("Outlook good.");
    }else if (number == 13)
    {
      System.out.println("Better not tell you now.");
    }else if (number == 14)
    {
      System.out.println("Very Doubtful.");
    }else if (number == 15)
    {
      System.out.println("Yes Defintely.");
    }else 
    {
      System.out.println("Concentrate and ask again.");
    }
  }
}

    
    
    
    
